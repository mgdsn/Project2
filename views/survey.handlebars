<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">DevWeb</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/survey">Survey<span class="sr-only">(current)</span></a>
        </li>
        <button type="button" id="loginButton" class="btn btn-primary" data-toggle="modal"
          data-target="#exampleModalLong">
          Login
        </button>
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
          aria-labelledby="exampleModalLongTitle" aria-hidden="true" data-backdrop="false">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="form-group">
                    <label for="usernameInput">Username</label>
                    <input type="username" class="form-control" id="usernameAdd" aria-describedby="usernameHelp"
                      placeholder="Enter username">
                  </div>
                  <div class="form-group">
                    <label for="passInput">Password</label>
                    <input type="password" class="form-control" id="check1" placeholder="Enter password">
                  </div>
                  <div id="regDiv">
                    <a href="/register">Don't have an account? Click here to register.</a>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
